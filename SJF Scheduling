#include <stdio.h>

int main() {
    int n, bt[20], wt[20], tat[20], i, j, temp;
    float avg_wt=0, avg_tat=0;

    printf("Enter number of processes: ");
    scanf("%d",&n);

    printf("Enter burst times:\n");
    for(i=0;i<n;i++)
        scanf("%d",&bt[i]);

    for(i=0;i<n-1;i++)
        for(j=i+1;j<n;j++)
            if(bt[i]>bt[j]){
                temp=bt[i]; bt[i]=bt[j]; bt[j]=temp;
            }

    wt[0]=0;
    for(i=1;i<n;i++)
        wt[i]=wt[i-1]+bt[i-1];

    for(i=0;i<n;i++){
        tat[i]=wt[i]+bt[i];
        avg_wt+=wt[i];
        avg_tat+=tat[i];
    }

    printf("\nP\tBT\tWT\tTAT\n");
    for(i=0;i<n;i++)
        printf("%d\t%d\t%d\t%d\n",i+1,bt[i],wt[i],tat[i]);

    printf("\nAverage WT: %.2f\nAverage TAT: %.2f\n",avg_wt/n,avg_tat/n);
    return 0;
}

output 

P	BT	WT	TAT
1	6	  0	   6
2	7	  6	   13
3	8	 13	  21

Average WT: 6.33
Average TAT: 13.33
