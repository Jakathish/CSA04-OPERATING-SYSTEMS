#include <stdio.h>

int main() {
    int n, i, j;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int bt[n], priority[n], wt[n], tat[n];

    for(i = 0; i < n; i++) {
        printf("Enter burst time and priority for process P%d: ", i+1);
        scanf("%d %d", &bt[i], &priority[i]);
    }
    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(priority[i] > priority[j]) {
                int temp;
                temp = priority[i]; priority[i] = priority[j]; priority[j] = temp;
                temp = bt[i]; bt[i] = bt[j]; bt[j] = temp;
            }
        }
    }

    wt[0] = 0;
    tat[0] = bt[0];
    for(i = 1; i < n; i++) {
        wt[i] = wt[i-1] + bt[i-1];
        tat[i] = wt[i] + bt[i];
    }
    printf("\nP#\tBT\tPriority\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t\t%d\t%d\n", i+1, bt[i], priority[i], wt[i], tat[i]);
    }

    return 0;
}

input 
Enter number of processes: 3
Enter burst time and priority for process P1: 5 2
Enter burst time and priority for process P2: 3 1
Enter burst time and priority for process P3: 8 3

output
P0     BT      Priority    WT      TAT
P2      3       1           0       3
P1      5       2           3       8
P3      8       3           8       16
